{
  "manifest_version": 3,
  "default_locale": "en",

  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",
  "version": "1.0",

  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "512": "images/icon-512.png"
  },
  "background": {
    "scripts": ["dist/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://www.google.com/*", "https://www.google.com/search*"],
      "js": ["dist/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/assets/delete.svg",
        "dist/assets/arrow-down-dark.svg",
        "dist/assets/arrow-down-light.svg",
        "dist/assets/plus.circle.svg",
        "dist/assets/trash.svg"
      ],
      "matches": ["https://www.google.com/search*", "https://www.google.com/*"]
    }
  ],

  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": "images/toolbar-icon.svg"
  },

  "permissions": ["storage", "activeTab", "tabs"]
}
